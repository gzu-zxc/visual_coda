{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the distribution of insurance policies by type and start/end dates.",
    "data": {
        "url": "spider_csv/insurance_and_eClaims_policies.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Start_Date",
            "type": "temporal",
            "timeUnit": "yearmonthdate",
            "bin": {
                "maxbins": 30
            }
        },
        "y": {
            "field": "End_Date",
            "type": "temporal",
            "timeUnit": "yearmonthdate",
            "bin": {
                "maxbins": 30
            }
        },
        "color": {
            "field": "Policy_Type_Code",
            "type": "nominal",
            "aggregate": "count"
        }
    }
}