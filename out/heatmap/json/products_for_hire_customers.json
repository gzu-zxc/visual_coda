{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the distribution of good and bad customers by the month they became a customer and the month of their last hire.",
    "data": {
        "url": "spider_csv/products_for_hire_customers.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "date_became_customer",
            "type": "temporal",
            "timeUnit": "month",
            "bin": {
                "maxbins": 12
            }
        },
        "y": {
            "field": "date_last_hire",
            "type": "temporal",
            "timeUnit": "month",
            "bin": {
                "maxbins": 12
            }
        },
        "color": {
            "field": "good_or_bad_customer",
            "type": "nominal",
            "aggregate": "count"
        }
    }
}