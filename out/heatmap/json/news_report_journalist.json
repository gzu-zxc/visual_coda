{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the distribution of journalists by age and years of work experience.",
    "data": {
        "url": "spider_csv/news_report_journalist.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Age",
            "type": "quantitative",
            "bin": true
        },
        "y": {
            "field": "Years_working",
            "type": "quantitative",
            "bin": true
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative",
            "scale": {
                "scheme": "greenblue"
            }
        }
    }
}