{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap of soccer matches per month per venue.",
    "data": {
        "url": "spider_csv/city_record_MATCH.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Date",
            "type": "temporal",
            "timeUnit": "month",
            "axis": {
                "title": "Month"
            }
        },
        "y": {
            "field": "Venue",
            "type": "nominal",
            "axis": {
                "title": "Venue"
            }
        },
        "color": {
            "field": "count_Match_ID",
            "type": "quantitative",
            "aggregate": "count",
            "scale": {
                "scheme": "redblue"
            },
            "axis": {
                "title": "Number of Matches"
            }
        }
    },
    "transform": [
        {
            "calculate": "datum.Match_ID",
            "as": "count_Match_ID"
        }
    ]
}