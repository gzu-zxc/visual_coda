{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the count of customers by gender and customer ID.",
    "data": {
        "url": "spider_csv/customers_and_invoices_Customers.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "customer_id",
            "type": "ordinal",
            "scale": {
                "type": "band"
            }
        },
        "y": {
            "field": "gender",
            "type": "ordinal",
            "scale": {
                "type": "point"
            }
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative"
        }
    }
}