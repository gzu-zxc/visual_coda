{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the relationship between share and rating percentages of television channels.",
    "data": {
        "url": "spider_csv/program_share_channel.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Share_in_percent",
            "type": "quantitative",
            "axis": {
                "title": "Share in Percent"
            }
        },
        "y": {
            "field": "Rating_in_percent",
            "type": "quantitative",
            "axis": {
                "title": "Rating in Percent"
            }
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative",
            "scale": {
                "scheme": "greenblue"
            },
            "legend": {
                "title": "Number of Channels"
            }
        }
    }
}