{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap of flight altitudes over time.",
    "data": {
        "url": "spider_csv/flight_company_flight.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Date",
            "type": "temporal",
            "timeUnit": "month"
        },
        "y": {
            "field": "Altitude",
            "bin": true,
            "type": "quantitative"
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative"
        }
    }
}