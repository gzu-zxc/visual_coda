{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the distribution of mountain heights across different mountain ranges.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/climbing_mountain.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Range",
            "type": "nominal"
        },
        "y": {
            "field": "Height",
            "type": "quantitative",
            "bin": {
                "maxbins": 10
            }
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative"
        }
    }
}