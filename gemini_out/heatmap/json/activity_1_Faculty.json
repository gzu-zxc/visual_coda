{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "This visualization displays the count of faculty members in different ranks and buildings.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/activity_1_Faculty.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Building",
            "type": "nominal"
        },
        "y": {
            "field": "Rank",
            "type": "nominal"
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative"
        }
    }
}