{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the frequency of different incident types over time.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/behavior_monitoring_Behavior_Incident.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "date_incident_start",
            "type": "temporal",
            "timeUnit": "month",
            "title": "Month of Incident"
        },
        "y": {
            "field": "incident_type_code",
            "type": "nominal",
            "title": "Incident Type"
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative",
            "title": "Number of Incidents"
        }
    }
}