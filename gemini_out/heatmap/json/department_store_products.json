{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Heatmap visualization showing the distribution of product prices across different product types.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/department_store_products.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "product_type_code",
            "type": "nominal"
        },
        "y": {
            "field": "product_name",
            "type": "nominal"
        },
        "color": {
            "aggregate": "mean",
            "field": "product_price",
            "type": "quantitative"
        }
    }
}