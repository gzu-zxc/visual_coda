{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Heatmap showing the number of paper submissions per workshop and their acceptance status",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/workshop_paper_acceptance.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Workshop_ID",
            "type": "nominal"
        },
        "y": {
            "field": "Result",
            "type": "nominal"
        },
        "color": {
            "aggregate": "count",
            "field": "Submission_ID",
            "type": "quantitative"
        }
    }
}