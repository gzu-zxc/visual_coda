{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap visualization showing the distribution of student registrations over time.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/student_transcripts_tracking_Students.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "date_first_registered",
            "type": "temporal",
            "timeUnit": "month"
        },
        "y": {
            "field": "date_left",
            "type": "temporal",
            "timeUnit": "month"
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative"
        }
    }
}