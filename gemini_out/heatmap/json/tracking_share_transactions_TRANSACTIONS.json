{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Heatmap of the number of transactions for each transaction type code and investor id.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/tracking_share_transactions_TRANSACTIONS.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "transaction_type_code",
            "type": "nominal"
        },
        "y": {
            "field": "investor_id",
            "type": "nominal"
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative"
        }
    }
}