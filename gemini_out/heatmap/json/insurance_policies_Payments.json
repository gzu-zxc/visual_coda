{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the average amount of payments by payment method and date",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/insurance_policies_Payments.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Payment_Method_Code",
            "type": "nominal"
        },
        "y": {
            "field": "Date_Payment_Made",
            "type": "temporal",
            "timeUnit": "month"
        },
        "color": {
            "aggregate": "mean",
            "field": "Amount_Payment",
            "type": "quantitative"
        }
    }
}