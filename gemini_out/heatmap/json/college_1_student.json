{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Heatmap showing the distribution of students across different majors and class standing",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/college_1_student.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "DEPT_CODE",
            "type": "nominal",
            "title": "Department"
        },
        "y": {
            "field": "STU_CLASS",
            "type": "nominal",
            "title": "Class Standing"
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative",
            "title": "Number of Students"
        }
    }
}