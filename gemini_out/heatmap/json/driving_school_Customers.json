{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "This visualization shows the distribution of customers by status and the amount of money they owe to the driving school.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/driving_school_Customers.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "customer_status_code",
            "type": "nominal"
        },
        "y": {
            "field": "amount_outstanding",
            "type": "quantitative",
            "bin": true
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative"
        }
    }
}