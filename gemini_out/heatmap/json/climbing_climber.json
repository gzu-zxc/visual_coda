{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap visualizing the average points earned by each climber on different mountains.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/climbing_climber.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Mountain_ID",
            "type": "nominal"
        },
        "y": {
            "field": "Name",
            "type": "nominal"
        },
        "color": {
            "aggregate": "average",
            "field": "Points",
            "type": "quantitative"
        }
    }
}