{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap visualization showing the distribution of ages of bus drivers across different cities.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/school_bus_driver.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Home_city",
            "type": "nominal"
        },
        "y": {
            "field": "Age",
            "type": "quantitative",
            "bin": {
                "maxbins": 20
            }
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative"
        }
    }
}