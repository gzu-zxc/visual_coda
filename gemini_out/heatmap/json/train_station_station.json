{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the relationship between the number of platforms at a station and the total number of passengers using the station annually.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/train_station_station.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Number_of_Platforms",
            "type": "quantitative",
            "title": "Number of Platforms",
            "bin":true
        },
        "y": {
            "field": "Location",
            "type": "nominal",
            "title": "Location"
        },
        "color": {
            "field": "Total_Passengers",
            "type": "quantitative",
            "title": "Total Passengers"
        }
    }
}