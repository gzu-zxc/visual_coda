{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble plot showing the relationship between the amount of the payment and the date the payment was made, with the size of the bubble representing the number of payments.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/insurance_policies_Payments.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Date_Payment_Made",
            "type": "temporal",
            "timeUnit": "month"
        },
        "y": {
            "field": "Amount_Payment",
            "type": "quantitative"
        },
        "size": {
            "field": "Payment_ID",
            "type": "quantitative",
            "aggregate": "count"
        }
    }
}