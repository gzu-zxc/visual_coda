{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble plot showing the relationship between endowment amount and the number of endowments per school.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/school_finance_endowment.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "amount",
            "type": "quantitative",
            "title": "Endowment Amount"
        },
        "y": {
            "aggregate": "count()",
            "field": "endowment_id",
            "type": "quantitative",
            "title": "Number of Endowments"
        },
        "size": {
            "field": "amount",
            "type": "quantitative",
            "title": "Endowment Amount"
        },
        "color": {
            "field": "School_id",
            "type": "nominal",
            "title": "School ID"
        }
    }
}