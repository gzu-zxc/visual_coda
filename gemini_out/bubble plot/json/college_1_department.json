{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble plot visualizing the relationship between department code and number of employees, with the size of the bubbles representing the department extension.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/college_1_department.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "DEPT_CODE",
            "type": "nominal"
        },
        "y": {
            "field": "EMP_NUM",
            "type": "quantitative"
        },
        "size": {
            "field": "DEPT_EXTENSION",
            "type": "quantitative"
        }
    }
}