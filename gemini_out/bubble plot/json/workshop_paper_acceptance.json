{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble plot showing the number of papers accepted and rejected for each workshop.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/workshop_paper_acceptance.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Workshop_ID",
            "type": "nominal"
        },
        "y": {
            "field": "Result",
            "type": "nominal"
        },
        "size": {
            "aggregate": "count()",
            "type": "quantitative"
        }
    }
}