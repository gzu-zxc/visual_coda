{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble chart showing the number of stations per network",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/station_weather_station.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "network_name",
            "type": "nominal"
        },
        "y": {
            "field": "id",
            "type": "quantitative",
            "aggregate": "count"
        },
        "size": {
            "field": "id",
            "type": "quantitative",
            "aggregate": "count"
        }
    }
}