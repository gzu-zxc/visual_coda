{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble chart showing the relationship between stadium capacity and opening year, with the size of the bubbles representing the capacity.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/swimming_stadium.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Opening_year",
            "type": "temporal",
            "timeUnit": "year"
        },
        "y": {
            "field": "Capacity",
            "type": "quantitative"
        },
        "size": {
            "field": "Capacity",
            "type": "quantitative"
        }
    }
}