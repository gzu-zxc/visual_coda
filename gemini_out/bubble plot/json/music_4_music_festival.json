{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble chart showing the relationship between the volume of the award and the category of the award.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/music_4_music_festival.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "size": {
            "field": "Volume",
            "type": "quantitative"
        },
        "color": {
            "field": "Category",
            "type": "nominal"
        },
        "x": {
            "field": "Category",
            "type": "nominal"
        },
        "y": {
            "field": "Volume",
            "type": "quantitative"
        }
    }
}