{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble plot that shows the count of TV series in each country. The size of each bubble represents the count of TV series in each country.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/tvshow_TV_Channel.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Country",
            "type": "nominal"
        },
        "y": {
            "field": "Language",
            "type": "nominal"
        },
        "size": {
            "field": "id",
            "type": "quantitative",
            "aggregate": "count"
        },
        "color": {
            "field": "Country",
            "type": "nominal"
        }
    },
    "config": {
        "view": {
            "stroke": null
        }
    }
}