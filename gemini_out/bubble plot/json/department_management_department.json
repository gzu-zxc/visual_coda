{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble plot showing the relationship between department budget and number of employees, with the size of the bubbles representing the department's ranking.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/department_management_department.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Budget_in_Billions",
            "type": "quantitative",
            "title": "Budget (in Billions)"
        },
        "y": {
            "field": "Num_Employees",
            "type": "quantitative",
            "title": "Number of Employees"
        },
        "size": {
            "field": "Ranking",
            "type": "quantitative",
            "title": "Ranking"
        },
        "color": {
            "field": "Name",
            "type": "nominal",
            "title": "Department Name"
        }
    }
}