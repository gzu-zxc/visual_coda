{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble chart showing the relationship between pilots' age, rank, and nationality.",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/pilot_record_pilot.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "size": {
            "field": "Age",
            "type": "quantitative"
        },
        "color": {
            "field": "Nationality",
            "type": "nominal"
        },
        "x": {
            "field": "Rank",
            "type": "quantitative"
        },
        "y": {
            "field": "Age",
            "type": "quantitative"
        }
    }
}