{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble chart showing the relationship between Support_rate and Consider_rate, with the size of the bubbles representing the Oppose_rate",
    "data": {
        "url": "https://raw.githubusercontent.com/gzu-zxc/visual_coda/main/spider_csv/candidate_poll_candidate.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Support_rate",
            "type": "quantitative"
        },
        "y": {
            "field": "Consider_rate",
            "type": "quantitative"
        },
        "size": {
            "field": "Oppose_rate",
            "type": "quantitative"
        }
    }
}