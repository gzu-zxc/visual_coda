{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Bubble plot of railway managers by age, level, and country.",
    "data": {
        "url": "spider_csv/railway_manager.csv.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Age",
            "type": "quantitative",
            "scale": {
                "zero": false
            },
            "axis": {
                "title": "Age"
            }
        },
        "y": {
            "field": "Level",
            "type": "ordinal",
            "axis": {
                "title": "Level"
            }
        },
        "size": {
            "field": "Country",
            "type": "nominal",
            "scale": {
                "range": [
                    100,
                    1000
                ]
            },
            "legend": {
                "title": "Country"
            }
        }
    }
}