{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble plot showing the net worth of singers against their birth year.",
    "data": {
        "url": "spider_csv/singer_singer.csv.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Birth_Year",
            "type": "temporal",
            "timeUnit": "year"
        },
        "y": {
            "field": "Net_Worth_Millions",
            "type": "quantitative",
            "sort": "-"
        },
        "size": {
            "field": "Singer_ID",
            "type": "quantitative"
        }
    }
}