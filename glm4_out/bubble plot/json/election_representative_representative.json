{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble plot showing the lifespan of elected representatives by party and state.",
    "data": {
        "url": "spider_csv/election_representative_representative.csv.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Party",
            "type": "nominal"
        },
        "y": {
            "field": "State",
            "type": "nominal"
        },
        "size": {
            "field": "Lifespan",
            "type": "quantitative",
            "scale": {
                "type": "sqrt"
            },
            "transform": [
                {
                    "calculate": "if(datum.Lifespan === 'â€“', 0, substring(datum.Lifespan, 2, length(datum.Lifespan) - 1) - substring(datum.Lifespan, 0, 4))",
                    "as": "lifespan_years"
                }
            ]
        }
    }
}