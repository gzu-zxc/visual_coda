{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble plot chart showing share transaction lots, investors, and lot details.",
    "data": {
        "url": "spider_csv/tracking_share_transactions_LOTS.csv.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "lot_id",
            "type": "nominal"
        },
        "y": {
            "field": "investor_id",
            "type": "nominal"
        },
        "size": {
            "field": "lot_details",
            "type": "nominal"
        }
    }
}