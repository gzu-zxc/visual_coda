{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble plot showing the number of hours students have played different games.",
    "data": {
        "url": "spider_csv/game_1_Plays_games.csv.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "GameID",
            "type": "ordinal"
        },
        "y": {
            "field": "Hours_Played",
            "type": "quantitative"
        },
        "size": {
            "field": "Hours_Played",
            "type": "quantitative"
        }
    }
}