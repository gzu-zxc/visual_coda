{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bubble plot chart showing artists' ages and the year they joined the gallery.",
    "data": {
        "url": "spider_csv/theme_gallery_artist.csv.csv"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Year_Join",
            "type": "temporal",
            "timeUnit": "year"
        },
        "y": {
            "field": "Age",
            "type": "quantitative"
        },
        "size": {
            "field": "Artist_ID",
            "type": "quantitative",
            "aggregate": "count"
        }
    }
}