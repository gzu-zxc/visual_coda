{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A histogram showing the number of people killed per year.",
    "data": {
        "url": "spider_csv/perpetrator_perpetrator.csv.csv"
    },
    "mark": {
        "type": "bar",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Killed",
            "type": "quantitative",
            "bin": {
                "maxbins": 50
            }
        },
        "y": {
            "bin": {
                "field": "Year",
                "maxbins": 50
            },
            "type": "quantitative"
        }
    }
}