{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A histogram showing the distribution of wedding church opening years.",
    "data": {
        "url": "spider_csv/wedding_Church.csv.csv"
    },
    "mark": {
        "type": "bar",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Open_Date",
            "type": "quantitative",
            "bin": {
                "maxbins": 20
            },
            "axis": {
                "title": "Year Opened"
            }
        },
        "y": {
            "type": "quantitative",
            "aggregate": "count",
            "axis": {
                "title": "Number of Churches"
            }
        }
    },
    "config": {
        "axis": {
            "labelFontSize": 12,
            "titleFontSize": 14
        }
    }
}