{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A histogram showing the distribution of station networks by their unique identifier and services provided.",
    "data": {
        "url": "spider_csv/station_weather_station.csv.csv"
    },
    "mark": {
        "type": "bar",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "id",
            "type": "quantitative",
            "scale": {
                "type": "linear"
            }
        },
        "color": {
            "field": "services",
            "type": "nominal"
        }
    }
}