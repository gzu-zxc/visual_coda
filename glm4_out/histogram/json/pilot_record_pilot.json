{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A histogram showing the distribution of pilots' ages.",
    "data": {
        "url": "spider_csv/pilot_record_pilot.csv.csv"
    },
    "mark": {
        "type": "bar",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Age",
            "type": "quantitative",
            "bin": true,
            "scale": {
                "zero": false
            }
        },
        "y": {
            "aggregate": "count",
            "type": "quantitative"
        }
    },
    "config": {
        "view": {
            "stroke": "transparent"
        },
        "axis": {
            "domainWidth": 1,
            "tickWidth": 1
        }
    }
}