{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A multi-series colored line chart showing user login status by user ID and role code.",
    "data": {
        "url": "spider_csv/document_management_users.csv"
    },
    "mark": {
        "type": "line",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "user_id",
            "type": "quantitative"
        },
        "y": {
            "field": "user_login",
            "type": "quantitative"
        },
        "color": {
            "field": "role_code",
            "type": "nominal"
        },
        "strokeDash": {
            "field": "role_code",
            "type": "nominal"
        }
    },
    "transform": [
        {
            "calculate": "datum.user_login === 1 ? 'Logged In' : 'Not Logged In'",
            "as": "login_status"
        }
    ],
    "config": {
        "axis": {
            "labelFontSize": 12,
            "titleFontSize": 14
        },
        "legend": {
            "labelFontSize": 12,
            "titleFontSize": 14
        }
    }
}