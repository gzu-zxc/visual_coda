{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A multi-series colored line chart showing the number of appellations by county and whether they are designated as American Viticultural Areas (AVA).",
    "data": {
        "url": "spider_csv/wine_1_APPELLATIONS.csv"
    },
    "mark": {
        "type": "line",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "County",
            "type": "ordinal"
        },
        "y": {
            "field": "count_Appelation",
            "type": "quantitative"
        },
        "color": {
            "field": "isAVA",
            "type": "nominal"
        }
    },
    "transform": [
        {
            "aggregate": [
                {
                    "op": "count",
                    "field": "Appelation",
                    "as": "count_Appelation"
                }
            ],
            "groupby": [
                "County",
                "isAVA"
            ]
        }
    ],
    "config": {
        "axis": {
            "labelFontSize": 12,
            "titleFontSize": 14
        }
    }
}