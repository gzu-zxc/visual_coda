{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the number of book club nominations and awards per category per year.",
    "data": {
        "url": "spider_csv/culture_company_book_club.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "temporal",
            "timeUnit": "year"
        },
        "y": {
            "field": "Category",
            "type": "nominal"
        },
        "color": {
            "aggregate": "count",
            "field": "book_club_id",
            "type": "quantitative",
            "scale": {
                "scheme": "greenblue"
            }
        }
    }
}