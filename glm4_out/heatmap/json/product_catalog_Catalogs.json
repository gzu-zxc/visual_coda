{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the number of product catalogs published and last revised by year.",
    "data": {
        "url": "spider_csv/product_catalog_Catalogs.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "date_of_publication",
            "type": "temporal",
            "timeUnit": "year",
            "axis": {
                "title": "Year of Publication"
            }
        },
        "y": {
            "field": "date_of_latest_revision",
            "type": "temporal",
            "timeUnit": "year",
            "axis": {
                "title": "Year of Latest Revision"
            }
        },
        "color": {
            "field": "catalog_id",
            "type": "quantitative",
            "aggregate": "count",
            "scale": {
                "scheme": "redblue"
            },
            "legend": {
                "title": "Number of Catalogs"
            }
        }
    }
}