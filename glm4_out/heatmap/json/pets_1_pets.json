{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap of pet age vs weight in an animal shelter.",
    "data": {
        "url": "spider_csv/pets_1_pets.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "pet_age",
            "type": "quantitative",
            "bin": true
        },
        "y": {
            "field": "weight",
            "type": "quantitative",
            "bin": true
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative",
            "scale": {
                "scheme": "greenblue"
            }
        }
    }
}