{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Heatmap of professors by department and highest degree earned.",
    "data": {
        "url": "spider_csv/college_1_professor.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "DEPT_CODE",
            "type": "nominal",
            "sort": {
                "field": "DEPT_CODE"
            }
        },
        "y": {
            "field": "PROF_HIGH_DEGREE",
            "type": "ordinal",
            "sort": {
                "field": "PROF_HIGH_DEGREE"
            }
        },
        "color": {
            "field": "count_EMP_NUM",
            "type": "quantitative",
            "aggregate": "count"
        }
    },
    "transform": [
        {
            "calculate": "datum.EMP_NUM",
            "as": "count_EMP_NUM"
        }
    ]
}