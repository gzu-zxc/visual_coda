{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the average highest score achieved by soccer players, categorized by yellow card status.",
    "data": {
        "url": "spider_csv/soccer_2_Player.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "row": {
            "field": "yCard",
            "type": "nominal"
        },
        "x": {
            "field": "HS",
            "type": "quantitative",
            "bin": true
        },
        "color": {
            "aggregate": "average",
            "field": "HS",
            "type": "quantitative",
            "scale": {
                "scheme": "redblue"
            }
        }
    }
}