{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the number of votes received by players at each rank.",
    "data": {
        "url": "spider_csv/riding_club_player.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "y": {
            "field": "Rank",
            "type": "ordinal"
        },
        "x": {
            "field": "Votes",
            "type": "quantitative",
            "bin": true
        },
        "color": {
            "field": "Votes",
            "type": "quantitative",
            "aggregate": "sum"
        }
    }
}