{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap of cinema opening years versus capacity.",
    "data": {
        "url": "spider_csv/cinema_cinema.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Openning_year",
            "type": "temporal",
            "timeUnit": "year",
            "bin": {
                "maxbins": 10
            }
        },
        "y": {
            "field": "Capacity",
            "type": "quantitative",
            "bin": {
                "maxbins": 10
            }
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative",
            "scale": {
                "scheme": "greenblue"
            }
        }
    }
}