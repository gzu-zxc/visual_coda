{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap of problem logs per staff member per month.",
    "data": {
        "url": "spider_csv/tracking_software_problems_problem_log.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "log_entry_date",
            "type": "temporal",
            "timeUnit": "month"
        },
        "y": {
            "field": "assigned_to_staff_id",
            "type": "ordinal",
            "scale": {
                "type": "band"
            }
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative"
        }
    }
}