{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the distribution of individuals by age and job title.",
    "data": {
        "url": "spider_csv/network_2_Person.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "age",
            "type": "quantitative",
            "bin": true
        },
        "y": {
            "field": "job",
            "type": "nominal"
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative"
        }
    }
}