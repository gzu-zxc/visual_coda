{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the distribution of store area sizes against the number of product categories available.",
    "data": {
        "url": "spider_csv/store_product_store.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Area_size",
            "type": "quantitative",
            "bin": true
        },
        "y": {
            "field": "Number_of_product_category",
            "type": "quantitative",
            "bin": true
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative"
        }
    }
}