{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap of student distribution across grades and classrooms.",
    "data": {
        "url": "spider_csv/student_1_list.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Grade",
            "type": "ordinal"
        },
        "y": {
            "field": "Classroom",
            "type": "ordinal"
        },
        "color": {
            "aggregate": "count",
            "field": "*",
            "type": "quantitative"
        }
    }
}