{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A heatmap showing the annual number of entries and exits at train stations against the number of platforms available.",
    "data": {
        "url": "spider_csv/train_station_station.csv.csv"
    },
    "mark": {
        "type": "rect",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Station_ID",
            "type": "ordinal",
            "sort": {
                "field": "Station_ID"
            }
        },
        "y": {
            "field": "Number_of_Platforms",
            "type": "ordinal",
            "sort": {
                "field": "Number_of_Platforms"
            }
        },
        "color": {
            "field": "Annual_entry_exit",
            "type": "quantitative",
            "scale": {
                "scheme": "redblue"
            }
        }
    }
}